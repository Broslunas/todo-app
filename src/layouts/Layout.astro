---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import "@/styles/global.css";

const mainTitle = "Broslunas TODO";
const image = "https://cdn.broslunas.com/favicon.png"
const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | {mainTitle}</title>
    <meta name="description" content={description}>
    <link rel="shortcut icon" href="https://cdn.broslunas.com/favicon.ico" type="image/x-icon">

    <meta property="og:title" content=`${title} | ${mainTitle}`>
    <meta property="og:description" content={description}>
    <meta property="og:type" content="website">
    <meta property="og:url" content={Astro.url}>
    <meta property="og:image" content={image}>

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content=`${title} | ${mainTitle}`>
    <meta name="twitter:description" content={description}>
    <meta name="twitter:image" content={image}>

    
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script is:inline src="https://analytics.ahrefs.com/analytics.js" data-key="MTC8tH3PeuJaj4RjTpix3g"></script>
</head>
<body>
    <Header title={mainTitle} />
    <slot></slot>
    <Footer />
</body>
</html>